<%= form_for [@board, Ticket.new], url: board_tickets_path(@board), method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%#= f.label :status %>
  <%#= f.select :status, [['Backlog', 0], ['Current Sprint', 1], ['In Progress', 2], ['Done',3]] %>

  <%= f.submit %>
<% end %>
