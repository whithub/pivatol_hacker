<%= form_for [@board, Ticket.new], url: board_tickets_path(@board), method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Ticket Name" %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Ticket Description" %>

  <%= f.label :status %>
  <%= f.select :status, [['Backlog', :backlog],
                         ['Current Sprint', :current_sprint],
                         ['In Progress', :in_progress],
                         ['Done', :done]], id: "ticket-status" %>

  <%= f.submit %>
<% end %>
