<div class="row">
  <div class="col-md-4"></div>

  <div class="col-md-4">
    <div class="form-new-ticket">
      <h2 class="form-new-ticket-heading">Edit Ticket</h2>

      <%= form_for [@board, @ticket], url: board_ticket_path(@board, @ticket), method: :put do |f| %>
        <%#= f.label :name %>
        <%= f.text_field :name, placeholder: "Ticket Name", class: "form-control" %><br>

        <%#= f.label :description %>
        <%= f.text_area :description, placeholder: "Ticket Description", class: "form-control"  %><br>

        <br>

        <%= f.submit "Update Ticket", class: "btn btn-md btn-primary btn-block" %>
      <% end %>

    </div>
  </div>

  <div class="col-md-4"></div>
</div>


